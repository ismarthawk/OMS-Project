<%- include('../htmlend.ejs')  %>

<section class="section">
    <div class="container">
        <p class="title has-text-centered is-1 is-hidden-mobile">Outing management System</p>
        <p class="title has-text-centered is-1 is-hidden-desktop is-hidden-tablet">OMS</p>
    </div>
</section>
<!-- Registration Part Section -->
<style type="text/css">

</style>
</head>

<body>
    <p class="title has-text-centered">Register Here</p>
    <div class="columns">
        <div class="column is-4 has-offset-2"></div>
        <div class="column ">
            <form action="/auth/register" method="post">
                <div class="column ">
                    <label class="label">Student Name</label>
                    <div class="control ">
                        <input name="name" class="input " type="text" placeholder="Student name">
                        <span class="icon">
                        </span>
                    </div>


                    <label class="label">Registration number</label>
                    <div class="control ">
                        <input name="regNumber" class="input " type="number" placeholder="Registration number">
                        <span class="icon">
                        </span>
                    </div>


                    <label class="label">Roll number</label>
                    <div class="control ">
                        <input name="rollNumber" class="input " type="number" placeholder="Roll number">
                        <span class="icon">
                        </span>
                    </div>


                    <label class="label"> Select year</label>
                    <div>
                        <select name="year" class="input" type="number">
                            <option value="none" selected disabled hidden>Select your current year of study</option>
                            <option value=1> I Btech
                            </option>
                            <option value=2> II Btech
                            </option>
                            <option value=3> III Btech
                            </option>
                            <option value=4> IV Btech
                            </option>
                        </select>
                    </div>
                    <br>

                    <label class="label">Branch </label>
                    <div>
                        <select name="branch" class="input" type="text">
                            <option value="none" selected disabled hidden>Select B  ranch</option>
                            <% for(let branch of branches) { %>
                                <option value="<%=branch%>"><%=branch%></option>
                            <% }%>
                        </select>
                    </div>
                    <br>


                    <label class="label"> Select Gender</label>
                    <div>
                        <select name="gender" class="input" type="text">
                            <option value="male"> Male
                            </option>
                            <option value="female"> Female
                            </option>
                        </select>
                    </div>
                    <br>

                    <label class="label">Block name</label>
                    <div>
                        <select name="blockid" class="input" type="text">
                            <option value="none" selected disabled hidden>Select Block Name</option>
                            <% for(let block of blocks) { %>
                                <option value="<%=block._id%>"><%=block.name%></option>
                            <% }%>
                        </select>
                    </div>
                    <br>


                    <label class="label">Room number</label>
                    <div class="control ">
                        <input name="roomNumber" class="input " type="number" placeholder="Room number">
                        <span class="icon">
                        </span>
                    </div>


                    <label class="label">Email</label>
                    <div class="control ">
                        <input name="mail" class="input " type="email" placeholder="Email">
                        <span class="icon">
                        </span>
                    </div>


                    <label class="label">Student's phone Number</label>
                    <div class="control ">
                        <input name="mobileNumber" class="input " type="number" placeholder="  Student Number">
                        <span class="icon">
                        </span>
                    </div>


                    <label class="label">Parent's phone Number</label>
                    <div class="control ">
                        <input name="parentMobileNumber" class="input " type="number" placeholder="Parent Number">
                        <span class="icon">
                        </span>
                    </div>


                    <label class="label">Password</label>
                    <div class="control ">
                        <input  name="pass" class="input " type="password" placeholder="Password">
                        <span class="icon">
                        </span>
                    </div>


                    <label class="label">Confirm Password</label>
                    <div class="control ">
                        <input class="input " type="password" placeholder="Confirm Password">
                        <span class="icon">
                        </span>
                    </div>

                </div>
                <div class="control has-text-centered">
                    <button class="button is-link has-text-centered">Register</button>
                </div>
        </div>
        <div class="column is-one-quarter"></div>
        </form>
    </div>

    <%- include('../htmlhead.ejs')  %>