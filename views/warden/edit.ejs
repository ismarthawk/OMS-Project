</head>

<body>
    <p class="title has-text-centered">Edit Details</p>
    <div class="columns">
        <div class="column is-4 has-offset-2"></div>
        <div class="column ">
            <form name="editForm"action="/warden/profile/<%=user._id%>/edit" method="post" onSubmit="return validateForm()">
                <div class="column ">
                    <label class="label">Warden Name</label>
                    <div class="control ">
                        <input name="name" class="input " type="text" placeholder="Warden name"value="<%=user.name%>">
                        <span class="icon">
                        </span>
                    </div>

                    <label class="label">Block name</label>
                    <div>
                        <select name="blockid" class="input" type="text">
                            <% for(let block of blocks) { %>
                            <% if(user.block.name==block.name){ %>
                            <option selected value="<%=block._id%>"><%=block.name%>
                            </option>
                            <% }else{ %>
                            <option value="<%=block._id%>"><%=block.name%>
                            </option>
                            <% } %>
                            <% }%>
                        </select>
                    </div>
                    <br>
                    

                    <label class="label">Phone Number</label>
                    <div class="control ">
                        <input name="mobileNumber" class="input " type="number" placeholder="Phone Number" value="<%=user.mobileNumber %>">
                        <span class="icon">
                        </span>
                    </div>

                    <label class="label">Email</label>
                    <div class="control ">
                        <input disabled name="mail" class="input " type="email" placeholder="Email"  value="<%= user.mail %>">
                        <span class="icon">
                        </span>
                    </div>
                </div>
                <div class="control has-text-centered">
                    <button class="button is-link has-text-centered">Save Changes</button>
                </div>
        </div>
        <div class="column is-one-quarter"></div>
        </form>
    </div>

    <script src="/js/wardenEdit.js"></script>

    <%- include('../htmlhead.ejs')  %>